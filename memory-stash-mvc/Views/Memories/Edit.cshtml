@model memory_stash_mvc.Models.Memory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container">
    <form asp-action="Edit">
        <div class="form-group">

            <label>Title</label>
            <input asp-for="Title" type="text" class="form-control">

            <label>Description</label>
            <input asp-for="Description" type="text" class="form-control">

            <label>Date</label>
            <input asp-for="Mdate" type="date" class="form-control">

            <input asp-for="GroupId" type="hidden" class="form-control">

            <input type="submit" class="btn btn-primary mt-2" value="Edit">
        </div>
    </form>

    <div id="add_images">
        @await Html.PartialAsync("~/Views/MemoryImages/Create.cshtml", new MemoryImage()
        {
            MemoryId = Model.Id
        })
    </div>

    @foreach (var item in Model.MemoryImages)
            {
                <img src="@("~/image/" + item.ImageName)" asp-append-version=true width="250px" height="250px">
            }
</div>

